<!-- res/drawable/custom_ripple_button_apply.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#41FFFFFF"> <!-- Ripple color is set to transparent to customize the background color -->

    <!-- Background color before click -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Adjust the radius as needed -->
            <solid android:color="#92000000" /> <!-- Initial background color is black -->
        </shape>
    </item>

</ripple>
