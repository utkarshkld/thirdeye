<!-- res/layout/settings.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llTitleBar"
    android:orientation="horizontal"
    android:background="@drawable/background"
    android:layout_alignParentTop="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/backbtn_"
        android:src="@drawable/previous"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_10sdp"/>



</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"

    > <!-- Set background color to black -->

    <!-- Speech Rate Slider -->


    <TextView
        android:id="@+id/textDefaultLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Reading Language"
        android:textSize="@dimen/_18sdp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
         /> <!-- Set text color to white -->

    <!-- Set text size of spinner items -->

    <!-- Switch for Partially Blind -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textbackground"
        android:textColor="#FFFFFF"
        >

        <Spinner
            android:id="@+id/spinnerDefaultLanguage"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:dropDownWidth="@dimen/_270sdp"
            android:overlapAnchor="false"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>
    <TextView
        android:id="@+id/inputlangage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Input Language"
        android:textSize="@dimen/_18sdp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="15dp" /> <!-- Set text color to white -->



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbackground"
        android:textColor="#FFFFFF"
        >

        <Spinner
            android:id="@+id/spinnerDefaultinputlanguage"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="52dp"
            android:overlapAnchor="false"
            android:dropDownWidth="@dimen/_270sdp"
            android:layout_centerHorizontal="true"

            android:textSize="@dimen/_20sdp" />
    </LinearLayout>
    <TextView
        android:id="@+id/inputlangagetranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translation Input Language"
        android:textSize="@dimen/_18sdp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="@dimen/_15sdp" /> <!-- Set text color to white -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbackground"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        >

        <Spinner
            android:id="@+id/spinnertransinputlanguage"
            android:layout_width="@dimen/_272sdp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:dropDownWidth="@dimen/_270sdp"
            android:overlapAnchor="false"

            />
    </LinearLayout>

    <!-- Set text color to white -->
    <TextView
        android:id="@+id/textSpeechRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech Rate"
        android:textSize="@dimen/_18sdp"
        android:textColor="@android:color/white" /> <!-- Set text color to white -->

    <!-- Default Reading Language -->
    <SeekBar
        android:id="@+id/sliderSpeechRate"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="50"
        android:progressTint="#A8FFFFFF"
        android:thumb="@drawable/custom_seekbar_thumb"
        />
    <!-- Buttons -->
    <TextView
        android:id="@+id/textPartiallyBlind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Partially Blind"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18sdp" />

    <Switch
        android:id="@+id/switchPartiallyBlind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:switchMinWidth="53dp"
        android:theme="@style/SwitchTheme"

        android:thumb="@drawable/custom_seekbar_thumb"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:background="@drawable/back_ripple"
            android:text="Back"
            android:textColor="@android:color/black" />

        <!-- Apply Button -->
        <Button
            android:id="@+id/buttonApply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="1"
            android:background="@drawable/apply_ripple"
            android:text="Apply"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>

</LinearLayout>