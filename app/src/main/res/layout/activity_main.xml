    <ImageView
        android:id="@+id/micButton"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"

        android:layout_centerVertical="true"
        android:background="@drawable/ellipse_1"
        android:contentDescription="Mic"
        android:foreground="@drawable/mic_ripple_big"
        android:padding="30dp"
        android:src="@drawable/mic_fill" />

    <LinearLayout
        android:id="@+id/llgridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:padding="@dimen/_10sdp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:columnCount="3"
            android:padding="@dimen/_2sdp"
            android:rowCount="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/wordsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:foreground="@drawable/ripple_card"
                app:cardBackgroundColor="@color/backgroud"
                app:cardCornerRadius="12dp"

                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:contentDescription="Read"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_76sdp"
                        android:layout_height="@dimen/_76sdp"
                        android:background="@drawable/background_card"
                        android:contentDescription="Read"

                        android:padding="@dimen/_10sdp"

                        android:src="@drawable/file" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Read"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/objectbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:foreground="@drawable/ripple_card"
                app:cardBackgroundColor="@color/backgroud"
                app:cardCornerRadius="12dp"

                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10dp"

                    android:contentDescription="Object"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!--                    <EditText-->
                    <!--                        android:id="@+id/fpsnumber"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:background="@drawable/textbackground"-->
                    <!--                        android:hint="default 30"-->
                    <!--                        android:inputType="number"/>-->

                    <ImageView
                        android:layout_width="@dimen/_76sdp"
                        android:layout_height="@dimen/_76sdp"
                        android:background="@drawable/background_card"
                        android:contentDescription="Object"
                        android:hint="Object Detection"
                        android:padding="@dimen/_13sdp"
                        android:src="@drawable/object" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Object"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnspeechtotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:foreground="@drawable/ripple_card"
                app:cardBackgroundColor="@color/backgroud"
                app:cardCornerRadius="12dp"

                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:contentDescription="Translate"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_76sdp"
                        android:layout_height="@dimen/_76sdp"
                        android:background="@drawable/background_card"
                        android:contentDescription="Translate"
                        android:hint="Translate"
                        android:paddingBottom="@dimen/_4sdp"
                        android:src="@drawable/speech_to_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Translate"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

